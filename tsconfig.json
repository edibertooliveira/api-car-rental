{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",                          
    "baseUrl": "./src",
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    },                                 
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,       
    "resolveJsonModule": true
  }
}
